<!-- views/add_contact.ejs -->
<!doctype html>
<html>
  <head>
    <title>Lazicard</title>
    <link rel="stylesheet" href="http://cdn.foundation5.zurb.com/foundation.css">
    <script src="http://cdn.foundation5.zurb.com/foundation.js"></script>
  </head>
  <body>


    <div class="reveal" id="exampleModal1" data-reveal>
      <h2 class="text-center">Adding a new contact</h1>
      <div class="row">
        <div class="large-12 columns">
          <p class="lead">Name:</p>
          <input type="text" placeholder="Type your contact name" />
        </div>
      </div>
      <div class="row">
        <div class="large-4 medium-4 columns">
          <p>Year:</p>
          <input type="text" placeholder="Don't forget" />
        </div>
        <div class="large-4 medium-4 columns">
          <p>Month:</p>
          <select>
            <option value="month">January</option>
            <option value="month">Feburary</option>
            <option value="month">March</option>
            <option value="month">April</option>
            <option value="month">May</option>
            <option value="month">Jun</option>
            <option value="month">July</option>
            <option value="month">Auguest</option>
            <option value="month">September</option>
            <option value="month">Octuber</option>
            <option value="month">November</option>
            <option value="month">December</option>
          </select>
        </div>
        <div class="large-4 medium-4 columns">
          <p>Day:</p>
          <input type="text" placeholder="to donate" />
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <p class="lead">Gender:</p>
          <select>
            <option value="Gender">Male</option>
            <option value="month">Female</option>
            </select>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <p class="lead">Email:</p>
          <input type="text" placeholder="Type your contact Email" />
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <p class="lead">Home Address:</p>
          <input type="text" placeholder="Type your contact Home Address" />
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <p class="lead">Chose ways of delivery:</p>
        </div>
        <div class="large-6 medium-6 columns">
          <input id="physical" type="checkbox"><label for="physical">physical</label>
        </div>
        <div class="large-6 medium-6 columns">
          <input id="email" type="checkbox"><label for="email">email</label>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <p class="lead">Send:</p>
          <select>
            <option value="send">Yes</option>
            <option value="send">No</option>
            </select>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <a href="/profile" class="button secondary float-left">Cancel</a>
          <a class="button success float-right">Submit</a>
        </div>
      </div>

    <script src="js/vendor/jquery.js"></script>
    <script src="js/vendor/what-input.js"></script>
    <script src="js/vendor/foundation.js"></script>
    <script src="js/app.js"></script>
    <script>
        $(document).foundation();
    </script>

		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/what-input/2.1.1/what-input.js"></script>

  </body>
</html>
